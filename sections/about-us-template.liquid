<div class="about-us">
    <div id="shopify-section-hero-1" class="shopify-section index-section index-section--flush">
        <div data-section-id="hero-1" data-section-type="hero-section">
            <div class="hero hero--large hero-hero-1 hero__overlay box ratio-container js lazyloaded" id="Hero-hero-1"
                data-layout="full_width">
                <div class="placeholder-background custom-placeholder-background"
                    style="background: url('{{ 'about-us-hero.jpg' | asset_url }}');">
                </div>
                <div class="custom-hero-overlay"></div>
                <div class="hero__inner">
                    <div class="page-width text-center">
                        <h2 class="h1 mega-title mega-title--large">J.B. DILLON</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="page-width">
        <div class="about-us-jump-to-link-container">
            <a href="#our-boots-section" id="our-boots">
                Our Boots
            </a>
            <a href="#our-people-section" id="our-people">
                Our People
            </a>
            <a href="#our-story-section" id="our-story">
                Our Story
            </a>
            <!-- MOBILE -->
            <a href="#our-boots-section" id="our-boots-mobile">
                Boots
            </a>
            <a href="#our-people-section" id="our-people-mobile">
                People
            </a>
            <a href="#our-story-section" id="our-story-mobile">
                Story
            </a>
        </div>
        <div class="about-us-video" style="background-image: url({{ 'horse.jpg' | asset_url }});">
            <div class="full-width-centered">
                <img src="{{ 'play-circle-icon.svg' | asset_url }}" alt="play">
            </div>
        </div>
    </div>

    <div id="our-boots-section" class="text-center">
        <h2 class="about-us-section-title">Our Boots</h2>
        <div class="out-boots-headline-container page-width">
            <div class="our-boots-headline-half text-left">
                <h3>{{section.settings.our-boots-headline}}</h3>
                {{section.settings.our-boots-description}}
            </div>
            <div class="our-boots-headline-half our-boots-headline-image" style="background: url('{{ 'our-boots.jpg' | asset_url }}') center;"></div>
        </div>
        <div class="about-us-touts-section">
            <div class="tout-box">Points/Images</div>
            <div class="tout-box">Points/Images</div>
            <div class="tout-box">Points/Images</div>
        </div>
    </div>
    <div id="our-people-section" class="text-center">
        <h2 class="about-us-section-title">Our People</h2>
        <div class="out-boots-headline-container page-width">
            <div class="our-boots-headline-half text-left">
                <h3>{{section.settings.our-people-headline}}</h3>
                {{section.settings.our-people-description}}
            </div>
            <div class="our-boots-headline-half our-boots-headline-image" style="background: url('{{ 'our-people.jpg' | asset_url }}') center;"></div>
        </div>
        <div class="about-us-touts-section">
            <div class="tout-box">Points/Images</div>
            <div class="tout-box">Points/Images</div>
            <div class="tout-box">Points/Images</div>
        </div>
    </div>
    <div id="our-story-section" class="text-center">
        <h2 class="about-us-section-title">Our Story</h2>
        <div class="out-boots-headline-container page-width">
            <div class="our-boots-headline-half text-left">
                <h3>{{section.settings.our-story-headline}}</h3>
                {{section.settings.our-story-description}}
            </div>
            <div class="our-boots-headline-half our-boots-headline-image" style="background: url('{{ 'our-story.jpg' | asset_url }}') center;"></div>
        </div>
        <div class="about-us-touts-section">
            <div class="tout-box">Points/Images</div>
            <div class="tout-box">Points/Images</div>
            <div class="tout-box">Points/Images</div>
        </div>
    </div>



</div>

<script>
    window.onload = function () {
        document.getElementById("our-boots").className = "about-us-jump-to-link-active";
        document.getElementById("our-boots-mobile").className = "about-us-jump-to-link-active";
    }

    window.onclick = function (e) {
        if (e.target.id === "our-boots" || e.target.id === "our-people" || e.target.id === "our-story") {
            document.getElementById("our-boots").className = "";
            document.getElementById("our-people").className = "";
            document.getElementById("our-story").className = "";

            document.getElementById(e.target.id).className = "about-us-jump-to-link-active";
        }
        if (e.target.id === "our-boots-mobile" || e.target.id === "our-people-mobile" || e.target.id === "our-story-mobile") {
            document.getElementById("our-boots-mobile").className = "";
            document.getElementById("our-people-mobile").className = "";
            document.getElementById("our-story-mobile").className = "";

            document.getElementById(e.target.id).className = "about-us-jump-to-link-active";
        }
    }
</script>


